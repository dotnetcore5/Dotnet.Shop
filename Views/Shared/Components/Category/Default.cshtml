@model IEnumerable<aspCart.Core.Domain.Catalog.Category>

<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a id="categoryDropdown" class="nav-link dropdown-toggle my-1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="categoryDropdown">
            @foreach (var category in Model)
            {
                <a id="@category.Id" asp-controller="Category" asp-action="@category.Name" class="form-control">@category.Name</a>
            }
        </div>
    </li>
</ul>
